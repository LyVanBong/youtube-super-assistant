{
  "manifest_version": 3,
  "name": "YouTube Super Commenter",
  "version": "3.0",
  "description": "Tạo bình luận từ popup hoặc trực tiếp trên trang YouTube.",
  "permissions": [
    "activeTab",    
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://workflow.softty.net/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/watch*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}