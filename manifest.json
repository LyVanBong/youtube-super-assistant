{
  "manifest_version": 3,
  "name": "YouTube Super Assistant",
  "version": "9.0",
  "description": "Trợ lý tự động cho YouTube: tạo bình luận, trả lời, cuộn trang và hơn thế nữa.",
  "permissions": [
    "scripting",
    "activeTab",
    "webNavigation",
    "storage"
  ],
  "host_permissions": [
    "https://workflow.softty.net/*",
    "*://*.youtube.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "options_page": "settings.html",
  "web_accessible_resources": [
    {
      "resources": [
        "icons/icon48.png"
      ],
      "matches": [
        "*://*.youtube.com/*"
      ]
    }
  ]
}