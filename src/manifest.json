{
  "manifest_version": 3,
  "name": "YouTube Super Assistant",
  "version": "11.4",
  "description": "Trợ lý tự động cho YouTube: tạo bình luận, trả lời, cuộn trang và hơn thế nữa.",
  "permissions": [
    "scripting",
    "activeTab",
    "webNavigation",
    "storage",
    "clipboardWrite"
  ],
  "host_permissions": [
    "https://*.youtube.com/*",
    "https://workflow.softty.net/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*" 
      ],
      "js": [
        "content/content.js"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "options_page": "pages/settings/settings.html",
  "web_accessible_resources": [
    {
      "resources": [
        "icons/icon48.png",
        "pages/about/about.html"
      ],
      "matches": [
        "*://*.youtube.com/*"
      ]
    }
  ]
}